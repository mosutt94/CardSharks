<h1>HighScores</h1>
<div id="bd">
<form action="" method="get">
	username: <input type="text" id="username" name="username">	
	<input id="btn" type="submit" value="Filter">
</form>

<p>
{{#if username}}
<span class="highlight">{{username}}</span>
{{/if}}
</p>
<table>
	<thead>
		<th>Username</th>
		<th>Current Win Streak </th>
		<th>Best Win Streak</th>
	</thead>
	<tbody id="scores">
		{{#each users}}
		<tr>
			<td>{{username}} </td> 
			<td>{{currentWinStreak}} </td> 
			<td>{{bestWinStreak}} </td> 
		</tr>
		{{/each}}
	</tbody>
</table>
</div>







<script src="javascripts/ajax.js"></script>
